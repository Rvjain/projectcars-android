<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.triloucoazar.projectcars.fragments.CreatePostFragment">

    <EditText
        android:id="@+id/create_post_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="xxx-0000"/>

    <EditText
        android:id="@+id/create_post_message"
        android:layout_below="@id/create_post_plate"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua mensagem"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/create_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_post_message"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/transition_create_post"
        android:src="@drawable/ic_add_white_48dp"
        fab:fab_colorNormal="@android:color/holo_blue_light"
        fab:fab_colorPressed="@android:color/holo_blue_dark"
        fab:fab_colorRipple="@android:color/holo_blue_bright"/>

</RelativeLayout>
